{
  "config": {
    "soft-package": true
  },
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "guzzlehttp/guzzle": "^7.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "src\\": "src/",
      "components\\": "components/",
      "public\\": "public/"
    }
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public"
  }
}
